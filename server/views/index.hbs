    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        <script>
            // Enable Brunch HTML/CSS Auto Reload
            window.brunch = window.brunch || {};
            window.brunch['auto-reload'] = { enabled: true };
        </script>
        <link rel="stylesheet" href="stylesheets/app.css">
    </head>

    <body>
        <div id="fb-root"></div>
        <div id="appView"></div>
        <script src="javascripts/vendor.js"></script>
        <script src="javascripts/app.js"></script>
        <script>
        window.fbAsyncInit = function() {
            // Init Facebook
            FB.init({
                appId: '{{app_config.appID}}',
                channelUrl: '//{{reqpath}}channel.html',
                status: true,
                cookie: true,
                xfbml: true
            });

            // Setup Global App Config
            require.define({"config": function(exports, require, module) {
                module.exports =
                {{#if public_config}}
                    {{{json public_config}}};
                {{else}}         
                    {};
                {{/if}}
            }});

            // Start App
            require('initialize');

        };

        // Load Facebook SDK
        (function(d, debug){
           var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
           if (d.getElementById(id)) {return;}
           js = d.createElement('script'); js.id = id; js.async = true;
           js.src = "//connect.facebook.net/{{app_config.language}}/all" + (debug ? "/debug" : "") + ".js";
           ref.parentNode.insertBefore(js, ref);
       }(document, /*debug*/ false));
        </script>        
    </body>
</html>
